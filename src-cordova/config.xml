<?xml version='1.0' encoding='utf-8'?>
<widget id="es.ingenia.ecaller.epidemias" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ecallerEpidemia</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-targetSdkVersion" value="27" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <splash src="res/splash.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- you can use any density that exists in the Android project -->
        <icon src="res/drawable-hdpi/ic_launcher.png" density="hdpi"/>
        <icon src="res/drawable-mdpi/ic_launcher.png" density="mdpi"/>
        <icon src="res/drawable-xhdpi/ic_launcher.png" density="xhdpi"/>
        <icon src="res/drawable-xxhdpi/ic_launcher.png" density="xxhdpi"/>
        <icon src="res/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
